%html{ :xmlns => 'http://www.w3.org/1999/xhtml', 'xml:lang' => 'en', :lang => 'en' }
  %head
    %meta{ 'http-equiv' => 'Content-Type', :content => 'text/html; charset=utf-8' }/
    %link{ :rel => 'SHORTCUT ICON', :href => '/favicon.ico' }/
    = stylesheet_link_tag :all, :media => 'all', :recursive => true, :cache => true

    - google = 'http://ajax.googleapis.com/ajax/libs'
    = javascript_include_tag "#{google}/jquery/1.4.2/jquery.min.js", "#{google}/jqueryui/1.8.4/jquery-ui.min.js", 'rails-jquery',
                             'jquery.ui.autocomplete.html', 'jquery.ui.autocomplete.selectFirst', 'jquery.ui.autocomplete.autoSelect',
                             'expandable', 'application', :cache => true
    = csrf_meta_tag
    = yield :head
    %title
      - title, page = t('site.title'), yield(:title)
      - title += ': ' + page  if page.present?
      = title

  %body
    = render 'layouts/header'
    #content
      = display_notices
      = yield
    = render 'layouts/footer'
