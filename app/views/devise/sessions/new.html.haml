= form_for resource, :as => resource_name, :url => session_path(resource_name)  do |f|
  %h2 Sign in
  %p
    %label{:for => 'openid_identifier'} Identity URL
    %br/
    %input{:type => 'text', :id => 'openid_identifier', :name => 'openid_identifier', :size => 30}/

  %hr/

  %p
    = f.label :email
    %br/
    = f.text_field :email

  %p
    = f.label :password
    %br/
    = f.password_field :password

  - if devise_mapping.rememberable?
    %p
      = f.check_box :remember_me
      = f.label :remember_me

  %p
    = f.submit 'Sign in'

  = render :partial => 'devise/shared/links'
